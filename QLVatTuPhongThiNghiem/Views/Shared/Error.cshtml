@model QLVatTuPhongThiNghiem.Models.ErrorViewModel
@{
    ViewData["Title"] = "Lỗi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-body">
    <div class="container-fluid">
        <div class="page-title">
            <div class="row">
                <div class="col-6">
                    <h3>Oops! Có lỗi xảy ra</h3>
                </div>
                <div class="col-6">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Dashboard")"><i data-feather="home"></i></a></li>
                        <li class="breadcrumb-item active">Lỗi</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>

    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12">
                <div class="card">
                    <div class="card-body text-center">
                        <div class="error-content">
                            <i data-feather="alert-circle" class="text-danger" style="width: 100px; height: 100px;"></i>
                            <h1 class="text-danger mt-3">500</h1>
                            <h4>Đã xảy ra lỗi trong hệ thống!</h4>
                            <p class="text-muted mt-3">
                                Chúng tôi xin lỗi vì sự bất tiện này. Vui lòng thử lại sau hoặc liên hệ với quản trị viên.
                            </p>

                            @if (Model.ShowRequestId)
                            {
                                <div class="alert alert-info mt-4">
                                    <strong>Request ID:</strong> @Model.RequestId
                                </div>
                            }

                            <div class="mt-4">
                                <a href="@Url.Action("Index", "Dashboard")" class="btn btn-primary">
                                    <i data-feather="home"></i> Về trang chủ
                                </a>
                                <button onclick="history.back()" class="btn btn-secondary">
                                    <i data-feather="arrow-left"></i> Quay lại
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function() {
        feather.replace();
    });
</script>