@model QLVatTuPhongThiNghiem.Models.ViewModels.TaoTaiKhoanViewModel
@{
    ViewData["Title"] = "Tạo tài khoản mới";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-body">
    <div class="container-fluid">
        <div class="page-title">
            <div class="row">
                <div class="col-6">
                    <h3>Tạo tài khoản mới</h3>
                </div>
                <div class="col-6">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Dashboard")"><i data-feather="home"></i></a></li>
                        <li class="breadcrumb-item"><a href="@Url.Action("Index")">Người dùng</a></li>
                        <li class="breadcrumb-item active">Tạo mới</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>

    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12">
                <div class="card">
                    <div class="card-header">
                        <h5>Thông tin tài khoản</h5>
                    </div>
                    <div class="card-body">
                        <form asp-action="Create" method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="TenDangNhap" class="control-label"></label>
                                        <input asp-for="TenDangNhap" class="form-control" />
                                        <span asp-validation-for="TenDangNhap" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="HoTen" class="control-label"></label>
                                        <input asp-for="HoTen" class="form-control" />
                                        <span asp-validation-for="HoTen" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="Email" class="control-label"></label>
                                        <input asp-for="Email" class="form-control" type="email" />
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="MaVaiTro" class="control-label"></label>
                                        <select asp-for="MaVaiTro" class="form-control">
                                            <option value="">-- Chọn vai trò --</option>
                                            @if (ViewBag.VaiTroList != null)
                                            {
                                                @foreach (var role in (IEnumerable<QLVatTuPhongThiNghiem.Models.Entities.VaiTro>)ViewBag.VaiTroList)
                                                {
                                                    <option value="@role.MaVaiTro">@role.TenVaiTro</option>
                                                }
                                            }
                                        </select>
                                        <span asp-validation-for="MaVaiTro" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="MatKhau" class="control-label"></label>
                                        <input asp-for="MatKhau" class="form-control" type="password" />
                                        <span asp-validation-for="MatKhau" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="XacNhanMatKhau" class="control-label"></label>
                                        <input asp-for="XacNhanMatKhau" class="form-control" type="password" />
                                        <span asp-validation-for="XacNhanMatKhau" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <button type="submit" class="btn btn-primary">
                                    <i data-feather="save"></i> Tạo tài khoản
                                </button>
                                <a asp-action="Index" class="btn btn-secondary">
                                    <i data-feather="x"></i> Hủy
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function() {
        feather.replace();
    });
</script>