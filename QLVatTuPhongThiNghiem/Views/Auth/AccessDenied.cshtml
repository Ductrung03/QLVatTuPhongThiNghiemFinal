@{
    ViewData["Title"] = "Truy cập bị từ chối";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-body">
    <div class="container-fluid">
        <div class="page-title">
            <div class="row">
                <div class="col-6">
                    <h3>Truy cập bị từ chối</h3>
                </div>
                <div class="col-6">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a href="@Url.Action("Index", "Dashboard")">
                                <i data-feather="home"></i>
                            </a>
                        </li>
                        <li class="breadcrumb-item active">Truy cập bị từ chối</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>

    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12">
                <div class="card">
                    <div class="card-body">
                        <div class="error-page text-center">
                            <div class="error-number">
                                <i data-feather="shield-off" class="text-warning" style="width: 120px; height: 120px;"></i>
                                <h1 class="text-warning">403</h1>
                            </div>
                            <div class="error-description">
                                <h4 class="text-dark mb-3">Truy cập bị từ chối!</h4>
                                <p class="text-muted mb-4">
                                    Bạn không có quyền truy cập vào trang này. Vui lòng liên hệ với quản trị viên để được cấp quyền.
                                </p>
                            </div>
                            <div class="error-actions">
                                <a href="@Url.Action("Index", "Dashboard")" class="btn btn-primary me-2">
                                    <i data-feather="home" class="me-1"></i>
                                    Về trang chủ
                                </a>
                                <button onclick="history.back()" class="btn btn-secondary">
                                    <i data-feather="arrow-left" class="me-1"></i>
                                    Quay lại
                                </button>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Quick Help Card -->
                <div class="card mt-4">
                    <div class="card-header bg-info text-white">
                        <h5 class="mb-0">
                            <i data-feather="help-circle" class="me-2"></i>
                            Cần hỗ trợ?
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-4">
                                <div class="text-center">
                                    <i data-feather="user-check" class="text-primary mb-2" style="width: 48px; height: 48px;"></i>
                                    <h6>Liên hệ quản trị viên</h6>
                                    <p class="text-muted">Để được cấp quyền truy cập</p>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="text-center">
                                    <i data-feather="book" class="text-success mb-2" style="width: 48px; height: 48px;"></i>
                                    <h6>Xem hướng dẫn</h6>
                                    <p class="text-muted">Tìm hiểu về quyền hạn hệ thống</p>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="text-center">
                                    <i data-feather="phone" class="text-warning mb-2" style="width: 48px; height: 48px;"></i>
                                    <h6>Hỗ trợ kỹ thuật</h6>
                                    <p class="text-muted">Liên hệ bộ phận IT</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Script {
    <script>
        $(document).ready(function() {
            feather.replace();
        });
    </script>
}